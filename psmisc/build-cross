prepare() {
  ./autogen.sh
}

configure() {
  ac_cv_func_malloc_0_nonnull=yes \
  ac_cv_func_realloc_0_nonnull=yes \
  "$CERD"/autoconf/files/glaucus-configure \
    --build=$BLD \
    --host=$TGT \
    --disable-harden-flags \
    --disable-nls \
    --disable-rpath
}

build() {
  make
}

package() {
  make \
    DESTDIR="$CRSD" \
    install-strip
}
