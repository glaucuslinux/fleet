prepare() {
  patch \
    -i "$CERD"/$nom/patches/alpine/apply-disable.patch \
    -p 1

  ./autogen.sh
}

configure() {
  ac_cv_prog_swig_found=no \
  "$CERD"/autoconf/files/glaucus-configure \
    --build=$BLD \
    --host=$TGT \
    --disable-static \
    --enable-pic \
    --without-python3
}

build() {
  make
}

package() {
  make \
    DESTDIR="$CRSD" \
    install-strip

  # Remove libtool archives
  rm -fv \
    "$CRSD"/usr/lib/$nom.la \
    "$CRSD"/usr/lib/libdrop_ambient.la
}
